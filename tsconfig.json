{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "strictNullChecks": true,
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "pages/_middleware.js",
        "lib/spotify.js",
        "lib/spotify.js",
        "pages/playlist/[id]/index.js",
        "components/Sidebar/Button.js",
        "components/Sidebar/Sidebar.js",
        "components/Avatar.js",
        "components/Layout.js",
        "components/Player.js",
        "components/Song.js",
        "pages/login.js",
        "pages/index.js",
        "pages/_app.js"
    ],
    "exclude": [
        "node_modules"
    ]
}